<h2 class = "mt-3">New book</h2>
  <%= form_with url: books_path , method: :post do |f| %>
    <div class = "form-group">
      <p>Title</p>
      <%= f.text_field "book[title]"  %>
    </div>
    <div class = "form-group">
      <p>Opinion</p>
      <%= f.text_area "book[body]" %>
    </div>
    <div class = "form-group">
      <%= f.submit 'Create Book' , class: "btn btn-success" %>
    </div>
  <% end %>