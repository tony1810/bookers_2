
<div class="error">
  <% if @book.errors.any?  %>
    <%= @book.errors.count %>errors prohibited this book from being saved:
      <ul>
        <% @book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
  <% end %>
</div>

<div class= "container">
  <div class= "row">
    <div class= "col-md-5 px-sm-0 mx-auto">
      <h2 class = "mt-3">Editing Book</h2>
        <%= form_with  model: @book , method: :patch do |f| %>
          <div class = "form-group">
            <p>Title</p>
            <%= f.text_field :title, class: "form-control" %>
          </div>
          <div class = "form-group">
            <p>Opinion</p>
            <%= f.text_area :body , class: "form-control"%>
          </div>
          <div class = "form-group">
            <%= f.submit 'Update Book' , class: "btn btn-success" %>
          </div>
        <% end %>
        <%= link_to 'Show', book_path(params[:id]) ,class: "link-book" %>
        |
        <%= link_to 'Back', books_path , class: "link-book" %>
      </div>
    </div>
  </div>

