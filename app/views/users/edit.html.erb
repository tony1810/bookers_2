  <% if @user.errors.any?  %>
    <%= @user.errors.count %>errors prohibited this book from being saved:
      <ul>
        <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
  <% end %>
</div>

<div class= "container">
  <div class= "row">
    <div class= "col-lg-5 px-sm-0 mx-auto">

<h2 class = "mt-3">User info</h2>
  <%= form_with model: @user do |f| %>
    <div class = "form-group">
      <p>Name</p>
      <%= f.text_field :name , class: "form-control" %>
    </div>
    <div class = "form-group">
      <p>Image</p>
      <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %>
    </div>
    <div class = "form-group">
      <p>Introduction</p>
      <%= f.text_area :introduction , class: "form-control"%>
    </div>
    <div class = "form-group">
      <%= f.submit 'Update User' , class: "btn btn-secondary " %>
    </div>
  <% end %>
    </div>
  </div>
</div>