

<div class="container px-5 px-sm-0">
  <div class="row">
    <div class = "col-md-3">
      <%= render 'books/userinfo', user: @user %>
      <%= render 'books/new', books: @book %>
    </div>
    <div class = "col-md-8 offset-md-1">
      <h2>Users</h2>
        <table class="table">
          <thead>
            <tr>
              <th>image</th>
              <th>name</th>
            </tr>
          </thead>
          <% @users.each do |user| %>
            <tobody>
              <tr>
                <td><%=image_tag user.get_profile_image(100,100) %></td>
                <td><%=user.name %></td>
                <td><%= link_to 'Show' , user_path(user) %></td>
              </tr>
            </tobody>
          <% end %>
        </table>
      </div>
    </div>
  </div>



